<org.kymjs.aframe.ui.widget.KJScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:divider="@drawable/divider_listview"
        android:background="@drawable/line_rect_gray">
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="糖伴点评"
                android:textStyle="bold"
                android:textSize="@dimen/menu_item"
                android:textColor="@android:color/black"/>
            
            <ImageButton
                android:id="@+id/btn_speak" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@android:drawable/ic_btn_speak_now"
                android:scaleType="centerInside"/>
        </RelativeLayout>
        
        
    </LinearLayout>

</org.kymjs.aframe.ui.widget.KJScrollView>
